<?xml version="1.0" encoding="UTF-8"?>
<map:sitemap xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://apache.org/cocoon/sitemap/1.0 http://cocoon.apache.org/schema/sitemap/cocoon-sitemap-1.0.xsd"
 xmlns:map="http://apache.org/cocoon/sitemap/1.0">
  
  <!-- make sure xml is serialized as UTF-8 -->
  <map:components>
    <map:serializers>
    <map:serializer name="xml"         
      src="org.apache.cocoon.serialization.XMLSerializer"
      mime-type="text/xml">
      <encoding>UTF-8</encoding>
      <indent>yes</indent>
    </map:serializer>
      <!-- use xalan for text -->
      <map:serializer name="json" 
        logger="sitemap.serializer.text" 
        mime-type="application/x-javascript"
        src="org.apache.cocoon.serialization.TextSerializer">
        <method>text</method>
        <encoding>UTF-8</encoding>
        <transformer-factory>org.apache.xalan.processor.TransformerFactoryImpl</transformer-factory>
      </map:serializer>
    </map:serializers>
  </map:components>
  
  <map:resources>
    <!-- search filter resource -->
    <map:resource name="search_filter">
      <map:generate src="data/courses.xml" />
      <map:transform src="xsl/search.xsl" type="xslt2">
        <map:parameter name="keyword" value="{request-param:keyword}"/>
        <map:parameter name="course_group" value="{request-param:course_group}"/>
        <map:parameter name="term" value="{request-param:term}"/>
        <map:parameter name="offered" value="{request-param:offered}"/>
        <map:parameter name="course_type" value="{request-param:course_type}"/>
      </map:transform>
    </map:resource>
  </map:resources>
  
  <map:pipelines>
    <map:pipeline>
      <map:match pattern="">
	       <map:redirect-to uri="index.html"/>
      </map:match>
      <!-- JSON search filter -->
      <map:match pattern="ajax/search.json">
        <map:call resource="search_filter" />
        <map:transform type="xslt2" src="xsl/xml2json.xsl" />
        <map:serialize type="json"/>
      </map:match>
      <!-- XML search filter -->
      <map:match pattern="ajax/search.xml">
        <map:call resource="search_filter">
        </map:call>
        <map:serialize type="xml" />
      </map:match>
      <!-- search fields -->
      <map:match pattern="ajax/searchfields.xml">
        <map:generate src="data/courses.xml"/>
        <map:transform src="xsl_provided/searchfields.xsl" type="xslt2" />
        <map:serialize type="xml" />
      </map:match> 
      <!-- static documents -->
      <map:match pattern="**.html">
        <map:read src="web/{1}.html" mime-type="text/html"/>
      </map:match>
      <map:match pattern="**.css">
        <map:read src="web/{1}.css" mime-type="text/css"/>
      </map:match>
      <map:match pattern="**.js">
        <map:read src="web/{1}.js" mime-type="text/javascript"/>
      </map:match>
      <map:match pattern="**.png">
        <map:read src="web/{1}.png" mime-type="image/png"/>
      </map:match>
      <map:match pattern="**.gif">
        <map:read src="web/{1}.png" mime-type="image/gif"/>
      </map:match>
      <map:match pattern="**.jpg">
        <map:read src="web/{1}.png" mime-type="image/jpeg"/>
      </map:match>
      <map:match pattern="**.rnc">
        <map:read src="web/{1}.rnc" mime-type="text/plain"/>
      </map:match>
      <map:match pattern="**.rng">
        <map:read src="web/{1}.rng" mime-type="text/xml"/>
      </map:match>
      <map:match pattern="**.dtd">
        <map:read src="web/{1}.dtd" mime-type="text/plain"/>
      </map:match>
      <map:match pattern="**.xsd">
        <map:read src="web/{1}.xsd" mime-type="text/xml"/>
      </map:match>
      <map:match pattern="**.xml">
        <map:read src="web/{1}.xml" mime-type="text/xml"/>
      </map:match>
    </map:pipeline>
  </map:pipelines>

</map:sitemap>
